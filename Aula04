    border-radius: 5px;
    background-color: black;
}

.item{
    background-color: red;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
}
.dragging{
    opacity: 0.5;
}

.shuffleButton{
    align-items: center;
    display: flex;
    padding: 10px;
    background-color: red;
    border-radius: 5px;
}





